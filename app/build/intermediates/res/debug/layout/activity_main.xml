<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/editTextIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="94dp"
        android:ems="10"
        android:inputType="textEmailAddress|number|numberSigned|numberDecimal" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextIP"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="71dp"
        android:text="IP addr:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewFilepath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="52dp"
        android:text="filepath"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_marginLeft="153dp"
        android:layout_toRightOf="@+id/editTextIP"
        android:text="connect" />

    <Button
        android:id="@+id/buttonTransfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/buttonConnect"
        android:layout_below="@+id/textViewFilepath"
        android:layout_marginTop="46dp"
        android:text="transfer" />

    <Button
        android:id="@+id/buttonFileSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonTransfer"
        android:layout_alignBottom="@+id/buttonTransfer"
        android:layout_marginRight="28dp"
        android:layout_toLeftOf="@+id/buttonTransfer"
        android:text="select file" />

</RelativeLayout><!-- From: file:/C:/Users/yalong.liu/AndroidStudioProjects/RemoteClient/app/src/main/res/layout/activity_main.xml -->