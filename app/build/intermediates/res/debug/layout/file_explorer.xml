<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:id="@+id/relativeLayoutFileExplorer">

	<RelativeLayout 
		android:id="@+id/relativeLayoutTitleBar"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_alignParentTop="true" 
		android:background="@drawable/img_title_bg">
		<ImageView 
			android:id="@+id/imageViewDir" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_alignParentLeft="true" 
			android:layout_marginLeft="15dip" 
			android:layout_marginTop="6dip"
			android:background="@drawable/img_explorer_title_sdcard" >
		</ImageView>
		<ImageView 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:background="@drawable/img_explorer_title_logo" 
			android:layout_alignParentRight="true">
		</ImageView>
		<TextView 
			android:id="@+id/textViewDirPath" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_toRightOf="@id/imageViewDir" 
			android:layout_marginTop="6dip" 
			android:layout_marginLeft="5dip" 
			android:text="/sdcard" 
			style="@style/TitleStyle03">
		</TextView>
	</RelativeLayout>
    
    <RelativeLayout 
	    android:id="@+id/relativeLayoutFileShowMode" 
	    android:layout_below="@+id/relativeLayoutTitleBar" 
	    android:layout_height="393dip" 
	    android:layout_width="fill_parent"
	    android:layout_marginTop="5dip">
	    <!--  
	    <GridView 
	    	android:id="@+id/gridViewFileExplorer" 
		    android:layout_height="fill_parent" 
		    android:layout_width="fill_parent" 
		    android:layout_alignParentLeft="true" 
		    android:numColumns="8"
		    android:verticalSpacing="20dip"
		    android:horizontalSpacing="20dip"
		    android:columnWidth="90dip"
		    android:stretchMode="columnWidth"
		    android:gravity="center">
	    </GridView>
	    -->
	    <GridView 
	    	android:id="@+id/gridViewFileExplorer" 
		    android:layout_height="fill_parent" 
		    android:layout_width="fill_parent" 
		    android:verticalSpacing="20dip"
		    android:horizontalSpacing="20dip"
		    android:columnWidth="80dip"
		    android:numColumns="auto_fit"
		    android:stretchMode="columnWidth"
		    android:gravity="center">
	    </GridView>
    </RelativeLayout>
    
    <RelativeLayout 
    	android:id="@+id/relativeLayoutControlBar" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:background="@drawable/img_control_bg" 
		android:layout_alignParentBottom="true"
		android:visibility="gone">
		<ImageButton 
			android:id="@+id/imageButtonHome" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_alignParentLeft="true" 
			android:background="@drawable/xml_btn_home" 
			android:layout_marginLeft="10dip" 
			android:layout_marginTop="5dip"
			android:visibility="gone">
		</ImageButton>
		<ImageButton 
			android:id="@+id/imageButtonGridList" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginLeft="10dip" 
			android:layout_marginTop="5dip" 
			android:background="@drawable/xml_btn_grid" 
			android:layout_toRightOf="@+id/imageButtonHome"
			android:visibility="gone">
		</ImageButton>
		<ImageButton 
			android:id="@+id/imageButtonReturn" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:background="@drawable/xml_btn_return" 
			android:layout_alignParentRight="true" 
			android:layout_marginRight="10dip" 
			android:layout_marginTop="5dip"
			android:visibility="gone">
		</ImageButton>
	</RelativeLayout>
</RelativeLayout>
